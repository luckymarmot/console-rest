.oic-main
    display: flex
    flex-direction: column
    justify-content: flex-start
    .oic-tab-bar
        display: flex
        flex-direction: row
        justify-content: space-around
        align-items: stretch
        height: 48px
        flex-shrink: 0
        flex-grow: 0
        .tab-view
            cursor: pointer
            display: flex
            justify-content: center
            align-items: center
            flex-grow: 1
            flex-shrink: 1
            flex-basis: 0
            font-size: 0.9em
            border-bottom: 2px solid #D8D6DD
            &.active
                border-bottom: 2px solid #D42C69

    .oic-tab-content
        flex-grow: 1
        flex-shrink: 1
        display: flex
        flex-direction: column
        justify-content: space-between
