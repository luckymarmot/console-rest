.oic-view .oic-view-content.oic-paw-content
    display: flex
    flex-direction: row
    justify-content: center
    align-items: stretch
    padding-top: 16px
    box-sizing: border-box
    .oic-paw-text-panel
        font-size: 0.9em
        padding-left: 16px
        padding-right: 16px
        box-sizing: border-box
        flex-grow: 1
        flex-shrink: 1
        flex-basis: 0
        display: flex
        flex-direction: column
        justify-content: flex-start
        align-items: center
        h3
            color: rgb(61, 51, 85)
            font-size: 1.25em
            font-weight: 400
            margin: 0
            padding: 0
            padding-top: 16px
            padding-bottom: 16px
        .oic-paw-support
            flex-grow: 0
            flex-shrink: 0
            text-align: justify
            line-height: 1.5
        .oic-paw-video
            flex-grow: 0
            flex-shrink: 0
            margin-top: 8px
            margin-bottom: 8px
            padding: 8px
        .oic-paw-action-button
            flex-grow: 0
            flex-shrink: 0
            text-decoration: none
            color: inherit
            cursor: pointer
            margin: 8px
            padding: 8px
            box-sizing: border-box
            width: calc(70% - 16px)
            flex-basis: 0
            flex-grow: 0
            flex-shrink: 0
            border: 1px solid #f00

    @media (min-width: 960px)
        .oic-paw-img-panel
            flex-grow: 1
            flex-shrink: 1
            flex-basis: 0
    @media (max-width: 960px)
        .oic-paw-text-panel
            flex-grow: 0.8
        .oic-paw-img-panel
            display: none

.oic-paw-view
    .oic-action-button
        text-decoration: none
