.oic .oic-header
    color: #ffffff
    font-weight: 200
    height: 64px
    display: flex
    flex-direction: row
    justify-content: space-between
    align-items: stretch
    flex-shrink: 0
    flex-grow: 0
    .logo-container
        max-width: 96px
        min-width: 96px
        width: 96px
        margin: 16px
        box-sizing: border-box
        display: flex
        flex-direction: row
        justify-content: flex-start
        flex-grow: 0
        flex-shrink: 0
        .logo
            width: 100%
    .title
        justify-content: center
        align-items: center
        flex-grow: 1
        flex-shrink: 0
        font-size: 1em
        white-space: nowrap
        overflow-y: scroll
        text-overflow: ellipsis
        @media (max-width: 600px)
            max-width: calc(100vw - 256px)
        @media (min-width: 600px) and (max-width: 960px)
            max-width: calc(80vw - 256px)
        @media (min-width: 960px) and (max0width: 1280px)
            max-width: 512px

    .close
        max-width: 96px
        width: 96px
        margin: 16px
        box-sizing: border-box
        justify-content: flex-end
        align-items: center
        height: 32px
        flex-grow: 0
        flex-shrink: 0
        cursor: pointer
