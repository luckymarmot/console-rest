@require '../../principles/colors'
@require '../../principles/gutter-mixins'
@require '../../principles/padding-mixins'

.container
    width: 100%
    height: 100%
    display: flex
    flex-direction: row
    align-items: stretch
    justify-content: center

.aside
    gutterHorizontal()
    border: 1px solid #00f
    display: flex
    flex-direction: column
    align-items: stretch
    flex-grow: 0
    @media (min-width: 960px) and (max-width: 1280px)
        width: 224px
    @media (min-width: 1280px) and (max-width: 1600px)
        // 4 64px blocks + 16px gutter L/R
        width: 288px
    @media (min-width: 1600px)
        // 5 64px blocks + 16px gutter L/R
        width: 352px

.content
    gutterHorizontal()
    border: 1px solid #f00
    display: flex
    flex-direction: column
    align-items: stretch
    flex-grow: 0
    @media (max-width: 960px)
        width: 100%
    @media (min-width: 960px) and (max-width: 1280px)
        width: 512px
    @media (min-width: 1280px) and (max-width: 1600px)
        // useable width: 672px
        width: 704px
    @media (min-width: 1600px)
        // useable width: 864px
        width: 896px

.section
    h2
        noGutter()
        noPadding()
        paddingVertical()
        font-size: 2rem
