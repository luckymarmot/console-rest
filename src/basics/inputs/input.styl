@require '../../principles/colors'
@require '../../principles/gutter-mixins'
@require '../../principles/padding-mixins'

.input-field
    gutterVerticalSmall()
    display: flex
    flex-direction: row
    min-height: 32px
    max-height: 32px
    input
    textarea
        padding: 0
        margin: 0
        appearance: inherit
        border: 1px solid $background700
        flex-grow:3
        font-size: 1rem
        font-weight: 400
        font-family: inherit
        paddingHorizontal()
        background-color: $background200
        &:focus
            border: 1px solid $primary
            outline:none
    .input-button
        display: flex
        flex-direction: column
        justify-content: center
        align-items: center
        outline: none
        border: 0
        padding: 0
        background-color: $background700
        color: $background200
        width: 32px
        min-width: 32px
        max-width: 32px
        cursor: pointer
        &:hover
            color: $primary

    textarea
        padding-top: 0.4rem
        &.small
            height: 2rem
        &.medium
            height: 9rem
        &.large
            height: 30rem

    .select
        font-weight: 400
        margin: 0
        display: flex
        flex-direction: column
        align-items: stretch
        > .header
            display: flex
            flex-direction: row
            align-items: center
            justify-content: flex-start
            min-height: 32px
            max-height: 32px
            border: 1px solid $background700
            flex-grow: 0
            flex-shrink: 1
            font-size: 1rem
            noPadding()
            paddingHorizontal()
            color: $background700
            background-color: $background200
            &.placeholder
                color: $background500
            &:focus
                border: 1px solid $primary
                outline:none

            > .arrow
                fill: $background200
                &:hover
                    fill: $primary

        > .content
            width: 100%
            flex-shrink: 0
            z-index: 1
            display: none
            noPadding()
            background-color: $background200
            color: $background700
            border-left: 1px solid $background700
            border-right: 1px solid $background700
            border-bottom: 1px solid $background700

            .option
                display: flex
                flex-direction: row
                justify-content: flex-start
                align-items: center
                paddingHorizontal()
                paddingVerticalVerySmall()
                min-height: 32px
                max-height: 32px
                cursor: pointer
                &:hover
                    background-color: $primary


        &.active > .content
            display: flex
            flex-direction: column

::-webkit-input-placeholder
    color: $background500

:-moz-placeholder
   color: $background500
   opacity:  1

::-moz-placeholder
   color: $background500
   opacity:  1

:-ms-input-placeholder
   color: $background500


/*target Internet Explorer 9 and Internet Explorer 10:*/
@media screen and (min-width:0\0) {
    .input-field select {
        background:none;
        padding: 5px;
    }
}
