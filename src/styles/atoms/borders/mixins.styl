@require '../colors/brand'
@require '../colors/neutral'

round-border()
    border-radius: 0.375rem

border(type, intensity)
    color = $primary-200
    if type == neutral
        if intensity == 900
            color = $neutral-900
        if intensity == 700
            color = $neutral-700
    if type == primary
        if  intensity == 200
            color = $primary-200
        if  intensity == 700
            color = $primary-700
    border-radius 0.25rem
    border: 1px solid color

dashed-border()
    border-radius 0.25rem
    border-width: 5px
    border-style: dashed
    border-color: $neutral-700

border-bottom()
    border-bottom: 1px solid $primary-200

border-top()
    border-top: 1px solid $primary-200
