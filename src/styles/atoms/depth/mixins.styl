
inset-depth(value)
    box-shadow:
        inset 0 0 ((3 * value) + 1)px rgba(0,0,0, 0.16 + 0.04 * value)

depth(value)
    box-shadow:
        0 (1 + 4 * value)px (2 + value * (2 * value - 1))px rgba(0,0,0,0.16 + 0.04 * value),
        0 (value * (value + 1) / 2)px (value * (value + 1) / 2 + 1)px rgba(0,0,0,0.23)
