@require '../../principles/colors'
@require '../../principles/gutter-mixins'
@require '../../principles/padding-mixins'

.helper-container
    display: flex
    flex-direction: column
    position: relative
    .helper-controls
        position: absolute
        top: 0
        right: 0
        height: 64px
        box-sizing: border-box
        display: flex
        justify-content: center
        padding: 16px
    .helper
        align-self: flex-end
        width: 80%
        max-width: 320px
        z-index: 1
        flex-basis: 0
        padding-top: 80px
        justify-content: flex-start
        height: calc(100vh - 64px)
        transition: right 0.2s ease-in-out
        > *
            flex-grow: 0
            flex-shrink: 0

        @media (max-width: 1280px)
            position: absolute
            padding-top: 16px
            padding-bottom: 16px
            box-sizing: border-box
            top:64px
            height: calc(100vh - 128px)
            overflow-y: scroll
            width: 320px
            background-color: #f6f5f7

        @media (max-width: 600px)
            min-width: calc(100vw)
            background-color: #f6f5f7
