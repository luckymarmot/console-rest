@require '../../principles/colors'
@require '../../principles/padding-mixins'

.header
    background-color: $background700
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    flex-wrap: nowrap

    @media (max-width: 360px)
        height: 56px

    @media (min-width: 360px)
        height: 64px

    .logo
        paddingAll()
        padding-left: 80px
        box-sizing: border-box

    .nav
        display: flex
        flex-direction: row
        align-items: stretch
        height: 100%
