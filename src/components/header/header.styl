@require '../../principles/colors'
@require '../../principles/padding-mixins'

header.header
    z-index: 1
    background-color: $background700
    display: flex
    flex-direction: row
    align-items: center
    justify-content: space-between
    flex-wrap: nowrap
    height: 64px
    min-height: 64px
    max-height: 64px

.logo
    z-index: 1
    top: 0px
    @media (max-width: 1280px)
        left: 0px
    @media (min-width: 1280px)
        left: inherit
    position: fixed
    height: 64px
    paddingAll()
    box-sizing: border-box
