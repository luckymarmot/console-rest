@require '../../principles/colors'
@require '../../principles/padding-mixins'
@require '../../principles/gutter-mixins'

.collapsible
    gutterHorizontal()
    gutterVerticalVerySmall()
    > .header
        cursor: pointer
        user-select: none
        display: flex
        flex-direction: row
        align-items: center
        max-height: 64px
        min-height: 64px
        paddingAll()
        background-color: $background200
        color: $background700
        font-weight: 400
        justify-content: space-between

        > .arrow
            fill: $background700
            &:hover
                fill: $primary

    > .content
        display: none
        paddingHorizontal()
        border-top: 1px solid $background500
        background-color: $background200
        color: $background700

    &.active > .content
        display: flex
