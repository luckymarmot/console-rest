@require '../../principles/colors'
@require '../../principles/padding-mixins'
@require '../../principles/gutter-mixins'

.status-bar
    height: 64px
    max-height: 64px
    min-height: 64px
    flex-shrink: 0
    display: flex
    flex-direction: row
    align-items: center
    paddingAll()

    .promo
        text-decoration: none
        color: $background700
        height: 100%
        display: flex
        flex-direction: row
        justify-content: flex-end
        align-items: center
        transition: all 0.2s ease-in-out

        .promo-icon
        .paw-logo
            transition: all 0.2s ease-in-out
            fill: $background700
            gutterHorizontalVerySmall()

        .paw-logo
            height: 100%
        &:hover
            color: $primary
            .promo-icon
            .paw-logo
                fill: $primary

    &.active
        // border-bottom: 1px solid $background500
        .back
            height: 100%
            flex-basis: 0
            flex-grow:1
            flex-shrink: 0
            display: flex
            flex-direction: row
            justify-content: flex-start
            align-items: center
            user-select: none
            cursor: pointer
            .img
                fill: $background700
                gutterHorizontalVerySmall()

        .center
            height: 100%
            flex-basis: 0
            flex-grow:1
            flex-shrink: 0

        .promo
            height: 100%
            flex-basis: 0
            flex-grow:1
            flex-shrink: 0

        @media (max-width: 960px)
            .back
                display: none
            .promo
                display: none
