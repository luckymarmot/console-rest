@require '../../principles/colors'

hr
    flex-shrink: 0
    margin: 0
    border: 0
    height: 1px
    width: 100%
    background-image: linear-gradient(to right, rgba(0, 0, 0, 0), $background700, rgba(0, 0, 0, 0))

.main
    display: none
    &.active
        min-height: calc(100vh - 64px)
        align-self: center
        display: flex
        flex-direction: column
        justify-content: flex-start
        align-items: center
        overflow-y: scroll
        h2
            text-align: center
            font-weight: 200
        .section
            width: 100%
            padding-top: 32px
            padding-bottom: 32px
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center
            @media (max-width: 600px)
                padding-top: 0px
                padding-bottom: 0px

    @media (min-width: 1600px)
        width: 720px

    @media (min-width: 1280px) and (max-width: 1600px)
        width: 640px

    @media (min-width: 960px) and (max-width: 1280px)
        width: 576px

    @media (min-width: 480px) and (max-width: 960px)
        width: 480px

    @media (max-width: 480px)
        width: 100%
